<Window x:Class="Demo07CapasC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Demo: Productos y Clientes" Height="480" Width="900">
    <Grid Margin="10">
        <TabControl x:Name="tabs">
            <!-- TAB PRODUCTOS -->
            <TabItem Header="Productos">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Formulario + Botones -->
                    <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                        <!-- Nombre -->
                        <StackPanel Orientation="Horizontal" Margin="0,4">
                            <Label Content="Nombre:" Width="90" VerticalAlignment="Center"/>
                            <TextBox x:Name="txtName" Width="220" MinWidth="120"/>
                        </StackPanel>

                        <!-- Precio -->
                        <StackPanel Orientation="Horizontal" Margin="0,4">
                            <Label Content="Precio:" Width="90" VerticalAlignment="Center"/>
                            <TextBox x:Name="txtPrice" Width="120" MinWidth="100"/>
                        </StackPanel>

                        <!-- Stock -->
                        <StackPanel Orientation="Horizontal" Margin="0,4">
                            <Label Content="Stock:" Width="90" VerticalAlignment="Center"/>
                            <TextBox x:Name="txtStock" Width="120" MinWidth="100"/>
                            <CheckBox x:Name="chkActive" Margin="20,0,0,0" IsChecked="True" Content="Activo"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <Button Content="Save" Width="100" Click="btnSaveProduct_Click"/>
                            <Button Content="Get"  Width="100" Margin="8,0,0,0" Click="btnListProducts_Click"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Grilla -->
                    <DataGrid x:Name="dgProducts"
                              Grid.Row="1"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              Height="300">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID"     Binding="{Binding ProductId}" Width="80"/>
                            <DataGridTextColumn Header="Nombre" Binding="{Binding Name}"      Width="*"/>
                            <DataGridTextColumn Header="Precio" Binding="{Binding Price}"     Width="120"/>
                            <DataGridTextColumn Header="Stock"  Binding="{Binding Stock}"     Width="120"/>
                            <DataGridCheckBoxColumn Header="Activo" Binding="{Binding Active}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- TAB CLIENTES -->
            <TabItem Header="Clientes">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Formulario -->
                    <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                        <StackPanel Orientation="Horizontal" Margin="0,4">
                            <Label Content="Nombre:" Width="90" VerticalAlignment="Center"/>
                            <TextBox x:Name="txtCName" Width="220" MinWidth="120"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,4">
                            <Label Content="Dirección:" Width="90" VerticalAlignment="Center"/>
                            <TextBox x:Name="txtCAddress" Width="300" MinWidth="160"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,4">
                            <Label Content="Teléfono:" Width="90" VerticalAlignment="Center"/>
                            <TextBox x:Name="txtCPhone" Width="160" MinWidth="120"/>
                            <CheckBox x:Name="chkCActive" Margin="20,0,0,0" IsChecked="True" Content="Activo"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <Button Content="Save"    Width="90" Click="btnSaveCustomer_Click"/>
                            <Button Content="Update"  Width="90" Margin="8,0,0,0" Click="btnUpdateCustomer_Click"/>
                            <Button Content="Delete"  Width="90" Margin="8,0,0,0" Click="btnDeleteCustomer_Click"/>
                            <Button Content="Get"     Width="90" Margin="8,0,0,0" Click="btnListCustomers_Click"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Grid -->
                    <DataGrid x:Name="dgCustomers"
                  Grid.Row="1"
                  AutoGenerateColumns="True"
                  SelectionMode="Single"
                  SelectionChanged="dgCustomers_SelectionChanged"
                  Height="300"/>
                </Grid>
            </TabItem>


        </TabControl>
    </Grid>
</Window>
